@model IEnumerable<Faoma4.contacten>

@{
    ViewBag.Title = "Index";
}

<h2>Overzicht contacten</h2>

<p>
    @Html.ActionLink("Voeg contact toe", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bedrijfsnaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.E_mail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Bedrijfsnaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.E_mail)
        </td>
        <td>
            @Html.ActionLink("Wijzig", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Verwijder", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
<div>
